    .d-none(data-notify, data-onload, data-message="<b>New Updates Available!</b> Don't forget to check them!" data-options='{"status":"danger", "pos":"top-right"}')

    .row

        // START dashboard main content
        .col-lg-9
            // START summary widgets
            .row
