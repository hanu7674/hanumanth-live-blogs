extends ../../_layout

block active
        - sidebar_active = 'dashboard.html'

block content
    .content-header
        .content-title
            | Dashboard
            br
            small Welcome user
        .ml-auto
            button(type='button').btn.btn-labeled.btn-primary.float-right
                span.btn-label
                    i.fa.fa-plus-circle
