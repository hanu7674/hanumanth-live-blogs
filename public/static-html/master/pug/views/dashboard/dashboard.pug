                                    em.fa.fa-user.fa-2x
                                        sup.fa.fa-plus
                        .card-body
                            // Bar chart
                            .text-center
                                .sparkline(data-bar-color="primary", data-height="30", data-bar-width="6", data-bar-spacing="6")
                                    | 5,3,4,6,5,9,4,4,10,5,9,6,4
                .col-xl-3.col-sm-6
                    // START widget
                    .card.animated.fadeInDownShort.animate-delay-500
                        .card-body.bg-warning.rounded-top
                            .d-flex.align-items-center
                                div
                                    p.mb0 Bounce Rate
                                    h3.m0 50%
                                .ml-auto
                                    em.fa.fa-users.fa-2x
                        .card-body
                            // Bar chart
                            .text-center
                                .sparkline(data-bar-color="warning", data-height="30", data-bar-width="6", data-bar-spacing="6")
                                    | 10,30,40,70,50,90,70,50,90,40,40,60,40
                .col-xl-3.col-sm-6
                    // START widget
                    .card.animated.fadeInDownShort.animate-delay-1000
                        .card-body.bg-danger.rounded-top
                            .d-flex.align-items-center
                                div
                                    p.mb0 Searchs
                                    h3.m0 28%
                                .ml-auto
                                    em.fa.fa-search.fa-2x
