extends ../../_layout

block active
    - sidebar_active = 'inbox.html'

block content
    .content-header
        .content-title Mail Inbox
        .ml-auto
            // START action buttons
            .d-flex
                .btn-group
                    button.btn.btn-secondary.btn-sm(type="button")
                        em.fas.fa-reply.text-gray-dark.fa-fw
                    button.btn.btn-secondary.btn-sm(type="button")
                        em.fas.fa-reply-all.text-gray-dark.fa-fw
                    button.btn.btn-secondary.btn-sm(type="button")
                        em.fas.fa-share.text-gray-dark.fa-fw
                    button.btn.btn-secondary.btn-sm(type="button")
                        em.fa.fa-exclamation.text-gray-dark.fa-fw
                    button.btn.btn-secondary.btn-sm(type="button")
                        em.fa.fa-times.text-gray-dark.fa-fw
            // END action buttons

    .row
        .col-xl-2.col-lg-4
            .d-flex.mb-3.align-items-center
                a.btn.btn-purple.mb-compose-button(href="#")
                    strong NEW MAIL
                button.btn.btn-sm.btn-secondary.mb-toggle-button.ml-auto(type="button", data-toggle="collapse", data-target=".mb-boxes")
                    em.fa.fa-bars.fa-fw.fa-lg
            // START mailbox list
            .mb-boxes.collapse.show
                .card.card-default
                    .card-body
                        ul.nav.nav-pills.flex-column
                            li.nav-item.active
                                a.nav-link(href="#").d-flex.align-items-center
                                    em.fa-fw.fa-lg.fa.fa-inbox.mr-2
                                    span Inbox
                                    span.ml-auto.badge.badge-primary 42
                            li.nav-item
                                a.nav-link(href="#").d-flex.align-items-center
                                    em.fa-fw.fa-lg.fa.fa-star.mr-2
                                    span Starred
                                    span.ml-auto.badge.badge-primary 10
                            li.nav-item
                                a.nav-link(href="#").d-flex.align-items-center
                                    em.fa-fw.fa-lg.far.fa-paper-plane.mr-2
                                    span Sent
                                    span.ml-auto.badge.badge-primary 0
                            li.nav-item
                                a.nav-link(href="#").d-flex.align-items-center
                                    em.fa-fw.fa-lg.fa.fa-edit.mr-2
                                    span Draft
                                    span.ml-auto.badge.badge-primary 5
                            li
                                a.nav-link(href="#").d-flex.align-items-center
                                    em.fa-fw.fa-lg.fas.fa-trash-alt.mr-2
                                    span Trash
                                    span.ml-auto.badge.badge-primary 0
                            li.p-1
                                .input-group.mt-3
                                    input#input-mail-search.form-control(type='text', placeholder="Search here..").border-right-0
                                    .input-group-append
                                        span.input-group-text.bg-transparent
                                            span.fa.fa-search.text-muted
                // END mailbox list
                .card.card-default
                    .card-body
                        p: small Quota (60%)
                        .progress.progress-striped.progress-xs
                            .progress-bar.bg-warning(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%;')
                                span.sr-only 60% Complete
